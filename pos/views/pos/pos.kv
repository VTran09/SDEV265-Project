<Pos>:
    BoxLayout:
        orientation:'vertical'
        size_hint_x: .7
        spacing: dp(12)
        BoxLayout:
            spacing: dp(12)
            size_hint_y: None
            height: dp(128)
            BoxLayout:
                size_hint_x: None
                width: self.height
                Image:
                    source: "assets/imgs/logo-light.png"
            AnchorLayout:
                anchor_x: "left"
                padding: [dp(24),dp (4)]
                BackBox:
                    bcolor: app.color_secondary_bg
                    radius: [self.height*.1]
                    size_hint_y: None
                    height: dp(54)
                    padding: [dp(12), 0, dp(12), 0]
                    Text:
                        color: app.color_secondary_text
                        text: icon("icon-search")
                        font_size: sp(24)
                        size_hint_x: None
                        width: self.height
                        halign: "center"
                        valign: "middle"
                    SearchBar:
                        hint_text: "Search by product name or code"
        BoxLayout:
            spacing: dp(12)
            orientation: "vertical"
            padding: [0, 0, dp(24), 0]
            BackBox:
                size_hint_y: None
                height: dp(48)
                bcolor: app.color_secondary_bg
                spacing: dp(12)
                padding: [dp(12), dp(2)]
                Text:
                    text: "Product Code"
                    font_name: app.fonts.heading
                    font_size: app.fonts.size.h3
                    color:app.color_primary_text
                    valign: "middle"
                    size_hint_x: .2
                Text:
                    text: "Product Name"
                    font_name: app.fonts.heading
                    font_size: app.fonts.size.h3
                    color:app.color_primary_text
                    valign: "middle"
                    size_hint_x: .4
                Text:
                    text: "Qty"
                    font_name: app.fonts.heading
                    font_size: app.fonts.size.h3
                    color:app.color_primary_text
                    valign: "middle"
                    size_hint_x: .14
                Text:
                    text: "Price"
                    font_name: app.fonts.heading
                    font_size: app.fonts.size.h3
                    color:app.color_primary_text
                    valign: "middle"
                    size_hint_x: .16
            BoxLayout:
                ScrollView:
                    do_scroll: [False, True]
                    size_hint_y: None
                    height: self.parent.height
                    GridLayout:
                        id: gl_products
                        size_hint_y: None
                        height: self.minimum_height
                        cols: 1
                        spacing: dp(12)

    BackBox:
        orientation:'vertical'
        size_hint_x: .3
        bcolor: app.color_alternate
        spacing: dp(12)
        BoxLayout:
            size_hint_y: None
            height: dp(64)
            spacing: dp(12)
            FlatButton:
                text: icon("icon-bell")
                color: app.color_primary_text
                font_size: app.fonts.size.h1
                size_hint_x: None
                width: self.height
            Widget:
            BoxLayout:
                RelativeLayout:
                    Text:
                        text: icon("icon-chevron-down")
                        color: app.color_primary_text
                        font_size: app.fonts.size.h2
                        halign: "right"
                    BoxLayout:
                        padding: [0, 0, dp(24), 0]
                        Spinner:
                            text: "first.Van"
                            font_name: app.fonts.styled
                            color: app.color_primary_text
                            font_size: app.fonts.size.h3
                            text_size: self.size
                            halign: "right"
                            valign: "middle"
                            values: ['Profile', 'Logout']
                            background_normal: ""
                            background_down: ""
                            background_color: [0, 0, 0, 0]
        Divider:
            id: br
        BoxLayout:
            

<Divider@Widget>:
    size_hint_y: None
    height: dp(1.2)
    canvas.before:
        Color:
            rgba: rgba("#dedede")
        Rectangle:
            pos: self.pos
            size: self.size

<ProductTile>:
    size_hint_y: None
    height: dp(48)
    bcolor: app.color_secondary_bg
    spacing: dp(12)
    padding: [dp(12), dp(2)]
    canvas.after:
        Color:
            rgba: app.color_secondary_bg
        Rectangle:
            pos: self.pos
            size: [self.size[0], dp(1)]
    Text:
        text: root.pcode
        font_name: app.fonts.body
        font_size: app.fonts.size.h3
        color: app.color_primary_text
        valign: "middle"
        size_hint_x: .2
    Text:
        text: root.name
        font_name: app.fonts.body
        font_size: app.fonts.size.h3
        color: app.color_primary_text
        valign: "middle"
        size_hint_x: .4
    BackBox:
        size_hint_x: .3
        FlatButton:
            text: icon("icon-minus-circle")
            color: app.color_tertiary
            font_size: app.fonts.size.h1
            on_release: root.qty_callback(root, False) if root.qty_callback else print
        Text:
            text: str(root.qty)
            font_name: app.fonts.body
            halign: "center"
            font_size: app.fonts.size.h3
            color:app.color_primary_text
            valign: "middle"
        FlatButton:
            text: icon("icon-plus-circle")
            color: app.color_secondary
            font_size: app.fonts.size.h1
            on_release: root.qty_callback(root, True) if root.qty_callback else print
    Text:
        text: str(root.price)
        font_name: app.fonts.body
        font_size: app.fonts.size.h3
        color: app.color_primary_text
        valign: "middle"
        size_hint_x: .2